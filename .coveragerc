[run]
source = src/anivault
omit =
    */tests/*
    */test_*.py
    src/anivault/gui/*
    src/anivault/widgets/*
    src/anivault/controllers/*
    src/anivault/core/benchmark.py
    src/anivault/core/profiler.py
    src/anivault/core/pipeline/parallel_scanner.py
    src/anivault/shared/error_messages.py
    */venv/*
    */virtualenv/*
    */__pycache__/*
    */site-packages/*

[report]
precision = 2
show_missing = True
skip_covered = False

exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    @overload
    pass
    \.\.\.

[html]
directory = htmlcov

