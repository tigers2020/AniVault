# AniVault Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# AI Model API Keys (for Task Master integration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
XAI_API_KEY=your_xai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
OLLAMA_API_KEY=your_ollama_api_key_here
OLLAMA_BASE_URL=http://localhost:11434/api

# Development Settings
ANIVAULT_LOG_LEVEL=INFO
ANIVAULT_DEBUG=false
ANIVAULT_PRIVACY_MODE=legacy

# Security Settings
ANIVAULT_MAX_CONCURRENT_REQUESTS=10
ANIVAULT_REQUEST_TIMEOUT=30
ANIVAULT_MAX_RETRIES=3

# Cache Settings
ANIVAULT_CACHE_TTL_HOURS=24
ANIVAULT_CACHE_MAX_SIZE_MB=100
