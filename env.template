# AniVault Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =============================================================================
# TMDB API Configuration
# =============================================================================
# TMDB API Key: Get from https://www.themoviedb.org/settings/api
# Rate Limits: 40 requests per 10 seconds, 10,000 per day
# Cache Policy: Responses cached for 24 hours by default
# Error Handling: Automatic retry with exponential backoff
# Offline Mode: Use cached data when API is unavailable
TMDB_API_KEY=your_tmdb_api_key_here

# TMDB Rate Limiting Configuration
# Maximum requests per 10-second window (default: 40)
TMDB_RATE_LIMIT_PER_WINDOW=40
# Request timeout in seconds (default: 30)
TMDB_REQUEST_TIMEOUT=30
# Maximum retry attempts (default: 3)
TMDB_MAX_RETRIES=3
# Exponential backoff base delay in seconds (default: 1)
TMDB_BACKOFF_BASE=1

# =============================================================================
# AI Model API Keys (for Task Master integration)
# =============================================================================
# Note: Only set the API keys for models you plan to use
# Keys are stored securely and never logged or transmitted in plain text

ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
XAI_API_KEY=your_xai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
OLLAMA_API_KEY=your_ollama_api_key_here
OLLAMA_BASE_URL=http://localhost:11434/api

# =============================================================================
# Development Settings
# =============================================================================
# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
ANIVAULT_LOG_LEVEL=INFO
# Enable debug mode for development (default: false)
ANIVAULT_DEBUG=false
# Privacy mode: legacy, enhanced, strict (default: legacy)
ANIVAULT_PRIVACY_MODE=legacy

# =============================================================================
# Security Settings
# =============================================================================
# Maximum concurrent API requests (default: 10)
ANIVAULT_MAX_CONCURRENT_REQUESTS=10
# Request timeout in seconds (default: 30)
ANIVAULT_REQUEST_TIMEOUT=30
# Maximum retry attempts (default: 3)
ANIVAULT_MAX_RETRIES=3

# =============================================================================
# Cache Settings
# =============================================================================
# Cache TTL in hours (default: 24)
ANIVAULT_CACHE_TTL_HOURS=24
# Maximum cache size in MB (default: 100)
ANIVAULT_CACHE_MAX_SIZE_MB=100
# Cache directory (default: ~/.anivault/cache)
ANIVAULT_CACHE_DIR=~/.anivault/cache
# Enable WAL mode for SQLite cache (default: true)
ANIVAULT_CACHE_WAL_MODE=true

# =============================================================================
# Logging Configuration
# =============================================================================
# Log file location (default: ~/.anivault/logs/)
ANIVAULT_LOG_DIR=~/.anivault/logs/
# Maximum log file size in MB (default: 10)
ANIVAULT_LOG_MAX_SIZE_MB=10
# Number of log files to keep (default: 5)
ANIVAULT_LOG_BACKUP_COUNT=5
# Enable log rotation (default: true)
ANIVAULT_LOG_ROTATION=true
# Mask sensitive data in logs (default: true)
ANIVAULT_LOG_MASK_SENSITIVE=true
